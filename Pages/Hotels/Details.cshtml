@page "{id:int}"
@model SimpleHotelBooking.Pages.Hotels.DetailsModel
@{
    ViewData["Title"] = Model.Hotel?.Name ?? "Hotel Details";
}

@if (Model.Hotel == null)
{
    <div class="alert alert-danger mt-4" role="alert">
        Hotel not found.
    </div>
}
else
{
    <div class="container mt-4">
        <!-- Hotel Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h1>@Model.Hotel.Name</h1>
                <p class="lead text-muted">
                    <i class="fas fa-map-marker-alt"></i> @Model.Hotel.Location
                </p>
                
                <!-- Rating -->
                <div class="mb-3">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="text-warning fs-4">
                            @if (i <= Math.Floor(Model.Hotel.Rating))
                            {
                                <i class="fas fa-star"></i>
                            }
                            else if (i == Math.Ceiling(Model.Hotel.Rating) && Model.Hotel.Rating % 1 > 0)
                            {
                                <i class="fas fa-star-half-alt"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        </span>
                    }
                    <span class="fs-5 ms-2">@Model.Hotel.Rating/5</span>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="text-success">$@Model.Hotel.PricePerNight.ToString("F2")</h3>
                        <p class="text-muted mb-3">per night</p>
                        <a asp-page="/Bookings/Create" asp-route-hotelId="@Model.Hotel.Id" 
                           class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-calendar-check"></i> Book Now
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hotel Image -->
        <div class="mb-4">
            <img src="@Model.Hotel.ImageUrl" alt="@Model.Hotel.Name" 
                 class="img-fluid rounded" style="max-height: 400px; width: 100%; object-fit: cover;">
        </div>

        <!-- Description & Details -->
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">Description</h4>
                        <p class="card-text">@Model.Hotel.Description</p>
                    </div>
                </div>

                <!-- Amenities -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title mb-3">
                            <i class="fas fa-concierge-bell"></i> Amenities
                        </h4>
                        <div class="row">
                            @foreach (var amenity in Model.Hotel.Amenities)
                            {
                                <div class="col-md-6 mb-2">
                                    <i class="fas fa-check text-success me-2"></i> @amenity
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-info-circle"></i> Contact Information
                        </h4>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-phone me-2 text-muted"></i>
                                @Model.Hotel.Phone
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-envelope me-2 text-muted"></i>
                                @Model.Hotel.Email
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                @Model.Hotel.Address
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}