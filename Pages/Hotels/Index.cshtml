@page
@model SimpleHotelBooking.Pages.Hotels.IndexModel
@{
    ViewData["Title"] = "All Hotels";
}

<div class="container mt-4">
    <h1 class="mb-4">Our Hotels</h1>
    
    <div class="row">
        @foreach (var hotel in Model.Hotels)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@hotel.ImageUrl" class="card-img-top" alt="@hotel.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@hotel.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@hotel.Location</h6>
                        <p class="card-text">@hotel.Description</p>
                        
                        <div class="mb-3">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="text-warning">
                                    @if (i <= Math.Floor(hotel.Rating))
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else if (i == Math.Ceiling(hotel.Rating) && hotel.Rating % 1 > 0)
                                    {
                                        <i class="fas fa-star-half-alt"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                </span>
                            }
                            <span class="text-muted ms-1">(@hotel.Rating)</span>
                        </div>
                        
                        <div class="mb-3">
                            @foreach (var amenity in hotel.Amenities.Take(3))
                            {
                                <span class="badge bg-light text-dark me-1">@amenity</span>
                            }
                            @if (hotel.Amenities.Split(",").Length > 3)
                            {
                                <span class="badge bg-light text-dark">+@(hotel.Amenities.Split(",").Length - 3) more</span>
                            }
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="text-success mb-0">$@hotel.PricePerNight.ToString("F2") <small class="text-muted">/night</small></h5>
                            <div>
                                <a asp-page="/Hotels/Details" asp-route-id="@hotel.Id" class="btn btn-outline-primary btn-sm me-2">Details</a>
                                <a asp-page="/Bookings/Create" asp-route-hotelId="@hotel.Id" class="btn btn-primary btn-sm">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}
