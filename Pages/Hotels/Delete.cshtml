@page "{id:int}"
@model SimpleHotelBooking.Pages.Hotels.DeleteModel
@{
    ViewData["Title"] = "Delete Hotel";
}

<h1>Delete Hotel</h1>

<h4>Are you sure you want to delete this hotel?</h4>
<div>
    <h5>@Model.Hotel.Name</h5>
    <p>Location: @Model.Hotel.Location</p>
    <p>Total Rooms: @Model.Hotel.TotalRooms</p>
    <p>Price/Night: @Model.Hotel.PricePerNight.ToString("C")</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Hotel.Id" />
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
    <a class="btn btn-secondary mt-2" asp-page="Index">Cancel</a>
</form>
