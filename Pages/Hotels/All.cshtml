@page
@model SimpleHotelBooking.Pages.Hotels.AllModel



@{
    ViewData["Title"] = "All Hotels";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">
            All <span class="text-primary">Luxury Hotels</span>
        </h1>
        <p class="lead text-muted">
            Browse our complete collection of hand-picked hotels worldwide
        </p>
    </div>

    @if (!Model.Hotels.Any())
    {
        <div class="alert alert-info text-center">
            No hotels available at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card hotel-card shadow-sm border-0 h-100 hover-3d">

                        <div class="position-relative">
                            <img src="@hotel.ImageUrl"
                                 class="card-img-top"
                                 style="height:250px; object-fit:cover;" />

                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning text-dark">
                                    ⭐ @hotel.Rating
                                </span>
                            </div>

                            <div class="position-absolute bottom-0 start-0 end-0 p-3 bg-gradient">
                                <h5 class="text-white mb-0">@hotel.Name</h5>
                                <small class="text-white-50">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @hotel.Location
                                </small>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text">
                                @hotel.Description
                            </p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="text-primary mb-0">
                                        $@hotel.PricePerNight
                                    </h4>
                                    <small class="text-muted">per night</small>
                                </div>

                                <a asp-page="/Hotels/Details"
                                   asp-route-id="@hotel.Id"
                                   class="btn btn-primary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-5">
        <a asp-page="/Index" class="btn btn-outline-secondary">
            ← Back to Home
        </a>
    </div>
</div>
