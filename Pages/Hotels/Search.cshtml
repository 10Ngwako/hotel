@page
@model YourAppNamespace.Pages.Hotels.SearchModel

@{
    ViewData["Title"] = "Hotel Search Results";
}

<div class="container py-5">
    <h2 class="mb-4">
        Hotels in <span class="text-primary">@Model.Location</span>
    </h2>

    <p class="text-muted">
        @Model.CheckInDate.ToShortDateString() →
        @Model.CheckOutDate.ToShortDateString()
        • @Model.Guests guest(s)
    </p>

    @if (!Model.Results.Any())
    {
        <div class="alert alert-info mt-4">
            No hotels found. Try adjusting your search.
        </div>
    }
    else
    {
        <div class="row g-4 mt-3">
            @foreach (var hotel in Model.Results)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@hotel.ImageUrl"
                             class="card-img-top"
                             style="height:220px; object-fit:cover;" />

                        <div class="card-body">
                            <h5>@hotel.Name</h5>
                            <p class="text-muted">
                                <i class="fas fa-map-marker-alt"></i>
                                @hotel.Location
                            </p>

                            <span class="badge bg-warning text-dark">
                                ⭐ @hotel.Rating
                            </span>

                            <h4 class="text-primary mt-3">
                                $@hotel.PricePerNight
                                <small class="text-muted fs-6">/ night</small>
                            </h4>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <a asp-page="/Hotels/Details"
                               asp-route-id="@hotel.Id"
                               class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-5">
        <a asp-page="/Index" class="btn btn-outline-secondary">
            ← Back to Home
        </a>
    </div>
</div>
