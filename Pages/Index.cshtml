                                    <i class="fas fa-stop"></i>
                                </button>
                            </div>
                            
                            <div class="d-flex align-items-center">
                                <i class="fas fa-volume-down text-muted me-2"></i>
                                <input type="range" class="form-range flex-grow-1 me-2" id="volumeControl" min="0" max="100" value="50">
                                <i class="fas fa-volume-up text-muted"></i>
                                <span class="ms-2 small" id="volumePercent">50%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Special Offers -->
<section class="py-5 bg-gradient-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="display-6 fw-bold">Summer Sale! Up to 40% Off</h2>
                <p class="lead">Book your summer getaway now and enjoy exclusive discounts</p>
                <div id="countdown" class="d-flex gap-3 my-4">
                    <div class="text-center">
                        <div class="countdown-box bg-white text-dark rounded p-3">
                            <div class="countdown-number" id="days">00</div>
                            <small>Days</small>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="countdown-box bg-white text-dark rounded p-3">
                            <div class="countdown-number" id="hours">00</div>
                            <small>Hours</small>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="countdown-box bg-white text-dark rounded p-3">
                            <div class="countdown-number" id="minutes">00</div>
                            <small>Minutes</small>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="countdown-box bg-white text-dark rounded p-3">
                            <div class="countdown-number" id="seconds">00</div>
                            <small>Seconds</small>
                        </div>
                    </div>
                </div>
