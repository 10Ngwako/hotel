    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Typewriter Effect
            var typed = new Typed('#typed-text', {
                strings: [
                    "Find Your Sanctuary",
                    "Discover Peaceful Stays",
                    "Escape to Luxury",
                    "Breathe in Paradise"
                ],
                typeSpeed: 70,
                backSpeed: 50,
