@page
@model IndexModel
@{
    ViewData["Title"] = "Home - Book Luxury Hotels Worldwide";
}

<!-- Hero Section -->
<section class="hero-section position-relative overflow-hidden text-white">
    <!-- Video Controls -->
    <div class="video-selector position-absolute top-0 end-0 mt-3 me-3 z-4 d-none d-md-block">
        <div class="dropdown">
            <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="videoSelectDropdown" data-bs-toggle="dropdown">
                <i class="fas fa-video"></i> Scene
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" data-video="beach">🏖️ Beach Sunset</a></li>
                <li><a class="dropdown-item" href="#" data-video="mountains">⛰️ Mountain Retreat</a></li>
                <li><a class="dropdown-item" href="#" data-video="forest">🌲 Forest Sanctuary</a></li>
                <li><a class="dropdown-item" href="#" data-video="city">🏙️ City Lights</a></li>
            </ul>
        </div>
        <button class="btn btn-sm btn-outline-light ms-2" id="toggleSound">
            <i class="fas fa-volume-mute" id="soundIcon"></i>
        </button>
    </div>

    <!-- Video Background -->
    <div class="video-background">
        <video autoplay muted loop playsinline class="hero-video active" id="mainVideo" data-type="beach">
            <source src="https://assets.mixkit.co/videos/preview/mixkit-white-sand-beach-and-palm-trees-1564-large.mp4" type="video/mp4">
        </video>
        
        <video muted loop playsinline class="hero-video" id="mountainVideo" data-type="mountains">
            <source src="https://assets.mixkit.co/videos/preview/mixkit-misty-mountains-at-sunset-2828-large.mp4" type="video/mp4">
        </video>
        
        <video muted loop playsinline class="hero-video" id="forestVideo" data-type="forest">
            <source src="https://assets.mixkit.co/videos/preview/mixkit-sun-rays-through-the-leaves-of-a-tree-1422-large.mp4" type="video/mp4">
        </video>
        
        <video muted loop playsinline class="hero-video" id="cityVideo" data-type="city">
            <source src="https://assets.mixkit.co/videos/preview/mixkit-city-traffic-at-night-3450-large.mp4" type="video/mp4">
        </video>
        
        <div class="video-overlay"></div>
    </div>
    
    <!-- Audio Elements -->
    <audio id="ambientAudio" loop>
        <!-- Using CDN links that should work -->
        <source src="https://cdn.pixabay.com/download/audio/2022/03/10/audio_9e8f3e8b79.mp3?filename=forest-with-small-river-birds-and-nature-field-recording-6735.mp3" type="audio/mpeg">
    </audio>
    
    <!-- Floating Elements -->
    <div class="floating-elements">
        <div class="floating-element element-1">
            <i class="fas fa-water text-info opacity-50"></i>
        </div>
        <div class="floating-element element-2">
            <i class="fas fa-leaf text-success opacity-50"></i>
        </div>
        <div class="floating-element element-3">
            <i class="fas fa-cloud text-light opacity-50"></i>
        </div>
        <div class="floating-element element-4">
            <i class="fas fa-star text-warning opacity-50"></i>
        </div>
    </div>
    
    <div class="container position-relative z-3">
        <div class="row min-vh-80 align-items-center">
            <div class="col-lg-8">
                <div class="typewriter-container mb-4">
                    <h1 class="display-3 fw-bold mb-4">
                        <span id="typed-text" class="text-white"></span>
                        <span class="text-warning typewriter-cursor">|</span>
                    </h1>
                </div>
                
                <p class="lead mb-5 animate__animated animate__fadeInUp pulse-text">
                    <i class="fas fa-spa me-2"></i>
                    Find your perfect escape. Experience luxury with tranquility.
                    <i class="fas fa-heart ms-2"></i>
                </p>
                
                <!-- FIXED: Working Search Form with Proper Redirect -->
                <div class="search-widget card shadow-lg animate__animated animate__fadeInUp animate__delay-1s glass-morphism">
                    <div class="card-body p-4">
                        <div class="search-header mb-4">
                            <h4 class="text-dark mb-2">
                                <i class="fas fa-search text-primary me-2"></i>
                                Find Your Peaceful Stay
                            </h4>
                            <p class="text-muted mb-0">Discover hotels designed for relaxation and rejuvenation</p>
                        </div>
                        
                        <!-- Form will submit to Hotels/Search page -->
                        <form method="get" asp-page="/Hotels/Search" id="searchForm">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label text-dark">
                                        <i class="fas fa-map-marker-alt text-primary"></i> Destination
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-compass text-primary"></i>
                                        </span>
                                        <input type="text" class="form-control form-control-lg" 
                                               name="location" placeholder="Where is your soul calling you?" 
                                               id="destinationInput" list="destinationSuggestions" required>
                                        <datalist id="destinationSuggestions">
                                            <option value="Bali, Indonesia"> Bali, Indonesia </option>
                                            <option value="Santorini, Greece"> Santorini, Greece </option>
                                            <option value="Kyoto, Japan"> Kyoto, Japan </option>
                                            <option value="Swiss Alps"> Swiss Alps </option>
                                            <option value="Maldives"> Maldives </option>
                                            <option value="Lake Como, Italy"> Lake Como, Italy </option>
                                            <option value="Big Sur, California"> Big Sur, California </option>
                                        </datalist>
                                    </div>
                                </div>
                                
                                <div class="col-md-3">
                                    <label class="form-label text-dark">
                                        <i class="fas fa-calendar-alt text-primary"></i> Check-in
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-calendar text-primary"></i>
                                        </span>
                                        <input type="date" class="form-control form-control-lg" 
                                               name="checkInDate" id="checkInDate" required>
                                    </div>
                                </div>
                                
                                <div class="col-md-3">
                                    <label class="form-label text-dark">
                                        <i class="fas fa-calendar-alt text-primary"></i> Check-out
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-calendar-check text-primary"></i>
                                        </span>
                                        <input type="date" class="form-control form-control-lg" 
                                               name="checkOutDate" id="checkOutDate" required>
                                    </div>
                                </div>
                                
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary btn-lg w-100 peace-button">
                                        <i class="fas fa-search me-2"></i> 
                                        <span class="d-none d-md-inline">Search</span>
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Advanced Filters -->
                            <div class="mt-4">
                                <a href="#advancedFilters" class="text-decoration-none" 
                                   data-bs-toggle="collapse" role="button" aria-expanded="false">
                                    <small class="text-primary">
                                        <i class="fas fa-sliders-h me-1"></i> Advanced Preferences
                                    </small>
                                </a>
                                
                                <div class="collapse mt-3" id="advancedFilters">
                                    <div class="row g-3">
                                        <div class="col-md-3">
                                            <label class="form-label text-dark small">Hotel Type</label>
                                            <select class="form-select" name="hotelType">
                                                <option value="">Any</option>
                                                <option value="spa">Spa Resort</option>
                                                <option value="eco">Eco Lodge</option>
                                                <option value="boutique">Boutique Hotel</option>
                                                <option value="beach">Beach Resort</option>
                                            </select>
                                        </div>
                                        
                                        <div class="col-md-3">
                                            <label class="form-label text-dark small">Amenities</label>
                                            <select class="form-select" name="amenities">
                                                <option value="">Any</option>
                                                <option value="spa">Spa</option>
                                                <option value="yoga">Yoga Studio</option>
                                                <option value="pool">Infinity Pool</option>
                                                <option value="beach">Private Beach</option>
                                            </select>
                                        </div>
                                        
                                        <div class="col-md-3">
                                            <label class="form-label text-dark small">Guests</label>
                                            <input type="number" class="form-control" name="guests" min="1" max="10" value="2" placeholder="Guests">
                                        </div>
                                        
                                        <div class="col-md-3">
                                            <label class="form-label text-dark small">Price Range</label>
                                            <select class="form-select" name="priceRange">
                                                <option value="">Any</option>
                                                <option value="100-300">R100 - R300</option>
                                                <option value="300-500">R300 - R500</option>
                                                <option value="500-1000">R500 - R1,000</option>
                                                <option value="1000+">R1,000+</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="quick-options mt-4">
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-page="/Hotels/Featured" class="btn btn-outline-light btn-sm relaxation-btn">
                            <i class="fas fa-crown me-1"></i> Featured
                        </a>
                        <a asp-page="/Hotels/Spa" class="btn btn-outline-light btn-sm relaxation-btn">
                            <i class="fas fa-spa me-1"></i> Spa Hotels
                        </a>
                        <a asp-page="/Hotels/Luxury" class="btn btn-outline-light btn-sm relaxation-btn">
                            <i class="fas fa-gem me-1"></i> Luxury
                        </a>
                        <a asp-page="/Hotels/Eco" class="btn btn-outline-light btn-sm relaxation-btn">
                            <i class="fas fa-leaf me-1"></i> Eco-Friendly
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Live Booking Counter -->
    <div class="booking-counter position-absolute bottom-0 start-0 end-0 bg-primary bg-opacity-90 text-white py-3 wave-effect">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-3 mb-md-0">
                    <div class="counter-item">
                        <i class="fas fa-users fa-2x mb-2 pulse-icon"></i>
                        <h3 class="mb-0 counter" data-count="10000">0</h3>
                        <small class="text-light">Happy Guests</small>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3 mb-md-0">
                    <div class="counter-item">
                        <i class="fas fa-hotel fa-2x mb-2 pulse-icon"></i>
                        <h3 class="mb-0 counter" data-count="2500">0</h3>
                        <small class="text-light">Luxury Hotels</small>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="counter-item">
                        <i class="fas fa-globe-americas fa-2x mb-2 pulse-icon"></i>
                        <h3 class="mb-0 counter" data-count="150">0</h3>
                        <small class="text-light">Countries</small>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="counter-item">
                        <i class="fas fa-calendar-check fa-2x mb-2 pulse-icon"></i>
                        <h3 class="mb-0 counter" data-count="50000">0</h3>
                        <small class="text-light">Bookings</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Hotels -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 fw-bold mb-3">Featured <span class="text-primary">Luxury</span> Hotels</h2>
                <p class="lead">Handpicked selection of our most exclusive properties</p>
            </div>
        </div>
        
        <div class="row g-4">
            @if (Model.FeaturedHotels != null && Model.FeaturedHotels.Any())
            {
                @foreach (var hotel in Model.FeaturedHotels)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card hotel-card shadow-sm border-0 overflow-hidden h-100 hover-3d">
                            <div class="position-relative">
                                <img src="@hotel.ImageUrl" class="card-img-top" alt="@hotel.Name" style="height: 250px; object-fit: cover;">
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star"></i> @hotel.Rating
                                    </span>
                                </div>
                                <div class="position-absolute bottom-0 start-0 end-0 p-3 bg-gradient">
                                    <h5 class="text-white mb-0">@hotel.Name</h5>
                                    <small class="text-white-50">
                                        <i class="fas fa-map-marker-alt"></i> @hotel.Location
                                    </small>
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="card-text">@hotel.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="text-primary mb-0">$@hotel.PricePerNight.ToString("F2")</h4>
                                        <small class="text-muted">per night</small>
                                    </div>
                                    <a asp-page="/Hotels/Details" asp-route-id="@hotel.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Fallback featured hotels -->
                <div class="col-lg-4 col-md-6">
                    <div class="card hotel-card shadow-sm border-0 overflow-hidden h-100 hover-3d">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" 
                                 class="card-img-top" alt="Luxury Hotel" style="height: 250px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star"></i> 4.8
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">PALAZZO DI BORGO</h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-map-marker-alt"></i> Milan, Italy
                            </p>
                            <p>Luxury hotel in the heart of Milan with stunning architecture and premium amenities.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="text-primary mb-0">R299.99</h4>
                                <a href="/Hotels/Details/1" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Add 2 more fallback hotels similarly -->
                <div class="col-lg-4 col-md-6">
                    <div class="card hotel-card shadow-sm border-0 overflow-hidden h-100 hover-3d">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1584132967334-10e028bd69f7?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" 
                                 class="card-img-top" alt="Beach Resort" style="height: 250px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star"></i> 4.9
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">OCEAN PARADISE RESORT</h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-map-marker-alt"></i> Bali, Indonesia
                            </p>
                            <p>Private beach resort with overwater bungalows and world-class spa facilities.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="text-primary mb-0">$499.99</h4>
                                <a href="/Hotels/Details/2" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="card hotel-card shadow-sm border-0 overflow-hidden h-100 hover-3d">
                        <div class="position-relative">
                            <img src="https://images.unsplash.com/photo-1571896349842-33c89424de2d?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" 
                                 class="card-img-top" alt="Mountain Retreat" style="height: 250px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star"></i> 4.7
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">ALPINE SANCTUARY LODGE</h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-map-marker-alt"></i> Swiss Alps
                            </p>
                            <p>Secluded mountain lodge with panoramic views and wellness center.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="text-primary mb-0">$399.99</h4>
                                <a href="/Hotels/Details/3" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- View All Button -->
        <div class="text-center mt-5">
            <a asp-page="/Hotels/All" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-hotel me-2"></i> View All Hotels
            </a>
        </div>
    </div>
</section>

<!-- Soundscape Player Section -->
<section class="py-5 bg-dark text-white" id="soundscape">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h2 class="display-6 fw-bold mb-4">
                    <i class="fas fa-headphones me-2"></i>
                    Calming Soundscapes
                </h2>
                <p class="lead mb-4">Listen to relaxing sounds as you browse our collection</p>
                <p class="mb-4">Research shows that calming sounds can reduce stress and enhance your browsing experience.</p>
                
                <div class="sound-info">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-check-circle text-success me-3 fa-lg"></i>
                        <div>
                            <h5 class="mb-0">Reduce Stress</h5>
                            <small class="text-white-50">Lower cortisol levels by 25%</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-check-circle text-success me-3 fa-lg"></i>
                        <div>
                            <h5 class="mb-0">Improve Focus</h5>
                            <small class="text-white-50">Enhance concentration while browsing</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-success me-3 fa-lg"></i>
                        <div>
                            <h5 class="mb-0">Better Decisions</h5>
                            <small class="text-white-50">Make more thoughtful booking choices</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="soundscape-player p-5 rounded-3 glass-morphism">
                    <h4 class="mb-4 text-center">
                        <i class="fas fa-music me-2"></i>
                        Sound Player
                    </h4>
                    
                    <!-- FIXED: Working Sound Player -->
                    <div class="sound-options">
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <button class="sound-btn w-100 active" data-sound="ocean">
                                    <i class="fas fa-water fa-2x mb-2"></i>
                                    <h6>Ocean Waves</h6>
                                    <small class="text-muted">Soothing seashore</small>
                                    <div class="sound-wave sound-wave-active"></div>
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button class="sound-btn w-100" data-sound="rain">
                                    <i class="fas fa-cloud-rain fa-2x mb-2"></i>
