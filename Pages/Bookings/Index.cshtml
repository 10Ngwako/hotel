@page
@model SimpleHotelBooking.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Bookings";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-calendar-alt me-2"></i>Bookings
        </h1>
        <a class="btn btn-primary btn-lg" asp-page="Create">
            <i class="fas fa-plus-circle me-2"></i>New Booking
        </a>
    </div>

    @if (!Model.Bookings.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-calendar-times fa-3x mb-3 text-muted"></i>
            <h3>No Bookings Found</h3>
            <p class="lead">You haven't made any bookings yet.</p>
            <a class="btn btn-primary mt-2" asp-page="Create">
                <i class="fas fa-plus-circle me-2"></i>Create Your First Booking
            </a>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="py-3">
                                    <i class="fas fa-user me-1"></i>Customer
                                </th>
                                <th class="py-3">
                                    <i class="fas fa-envelope me-1"></i>Email
                                </th>
                                <th class="py-3">
                                    <i class="fas fa-hotel me-1"></i>Hotel
                                </th>
                                <th class="py-3">
                                    <i class="fas fa-sign-in-alt me-1"></i>Check-in
                                </th>
                                <th class="py-3">
                                    <i class="fas fa-sign-out-alt me-1"></i>Check-out
                                </th>
                                <th class="py-3">
                                    <i class="fas fa-users me-1"></i>Guests
                                </th>
                                <th class="py-3">
                                    <i class="fas fa-dollar-sign me-1"></i>Total
                                </th>
                                <th class="py-3">
                                    <i class="fas fa-tasks me-1"></i>Status
                                </th>
                                <th class="py-3 text-end">
                                    <i class="fas fa-cogs me-1"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.Bookings)
                            {
                                <tr>
                                    <td class="py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                                @booking.CustomerName?.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <strong>@booking.CustomerName</strong>
                                                @if (!string.IsNullOrEmpty(booking.CustomerPhone))
                                                {
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="fas fa-phone fa-xs me-1"></i>@booking.CustomerPhone
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <a href="mailto:@booking.UserEmail" class="text-decoration-none">
                                            <i class="fas fa-envelope fa-xs me-1"></i>@booking.UserEmail
                                        </a>
                                    </td>
                                    <td class="py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-hotel text-primary me-2"></i>
                                            <div>
                                                <strong>@booking.HotelName</strong>
                                                @if (booking.Hotel != null)
                                                {
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="fas fa-map-marker-alt fa-xs me-1"></i>@booking.Hotel.Location
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div class="date-badge bg-light rounded p-2 text-center">
                                            <div class="text-primary fw-bold">
                                                @booking.CheckInDate.ToString("ddd", System.Globalization.CultureInfo.InvariantCulture)
                                            </div>
                                            <div class="fs-5 fw-bold">@booking.CheckInDate.Day</div>
                                            <div class="text-muted small">@booking.CheckInDate.ToString("MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</div>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div class="date-badge bg-light rounded p-2 text-center">
                                            <div class="text-primary fw-bold">
                                                @booking.CheckOutDate.ToString("ddd", System.Globalization.CultureInfo.InvariantCulture)
                                            </div>
                                            <div class="fs-5 fw-bold">@booking.CheckOutDate.Day</div>
                                            <div class="text-muted small">@booking.CheckOutDate.ToString("MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</div>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <span class="badge bg-info rounded-pill p-2">
                                            <i class="fas fa-users me-1"></i>@booking.NumberOfGuests
                                        </span>
                                    </td>
                                    <td class="py-3">
                                        <span class="fw-bold text-success">
                                            $@booking.TotalPrice.ToString("F2")
                                        </span>
                                    </td>
                                    <td class="py-3">
                                        @{
                                            var statusClass = booking.Status switch
                                            {
                                                "Confirmed" => "success",
                                                "Pending" => "warning",
                                                "Cancelled" => "danger",
                                                "Completed" => "info",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass rounded-pill p-2">
                                            @booking.Status
                                        </span>
                                    </td>
                                    <td class="py-3 text-end">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary" asp-page="Details" asp-route-id="@booking.Id" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a class="btn btn-sm btn-outline-warning" asp-page="Edit" asp-route-id="@booking.Id" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@booking.Id" title="Cancel">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Booking Stats -->
        <div class="row mt-4">
            <div class="col-md-3 col-6 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center py-4">
                        <h1 class="display-4 fw-bold">@Model.Bookings.Count</h1>
                        <p class="mb-0">Total Bookings</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center py-4">
                        <h1 class="display-4 fw-bold">
                            @Model.Bookings.Count(b => b.Status == "Confirmed")
                        </h1>
                        <p class="mb-0">Confirmed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-info text-white">
                    <div class="card-body text-center py-4">
                        <h1 class="display-4 fw-bold">
                            @Model.Bookings.Sum(b => b.TotalPrice).ToString("F2")
                        </h1>
                        <p class="mb-0">Total Revenue</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center py-4">
                        <h1 class="display-4 fw-bold">
                            @Model.Bookings.Count(b => b.Status == "Pending")
                        </h1>
                        <p class="mb-0">Pending</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .avatar-circle {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        
        .date-badge {
            min-width: 80px;
            border: 1px solid #dee2e6;
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
            transform: translateY(-2px);
            transition: all 0.2s ease;
        }
        
        .btn-group .btn {
            border-radius: 5px !important;
            margin: 0 2px;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add confirmation for delete/cancel
            const deleteButtons = document.querySelectorAll('.btn-outline-danger');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to cancel this booking?')) {
                        e.preventDefault();
                    }
                });
            });
            
            // Add tooltips to action buttons
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}