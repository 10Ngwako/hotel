@page
@model SimpleHotelBooking.Pages.Bookings.CreateModel
@{
    ViewData["Title"] = "New Booking";
}

<h1>New Booking</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Booking.CustomerName"></label>
        <input asp-for="Booking.CustomerName" class="form-control" />
        <span asp-validation-for="Booking.CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.CustomerEmail"></label>
        <input asp-for="Booking.CustomerEmail" class="form-control" />
        <span asp-validation-for="Booking.CustomerEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.HotelId"></label>
        <select asp-for="Booking.HotelId" class="form-control" asp-items="@(new SelectList(Model.Hotels, "Id", "Name"))"></select>
        <span asp-validation-for="Booking.HotelId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.CheckInDate"></label>
        <input asp-for="Booking.CheckInDate" class="form-control" />
        <span asp-validation-for="Booking.CheckInDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.CheckOutDate"></label>
        <input asp-for="Booking.CheckOutDate" class="form-control" />
        <span asp-validation-for="Booking.CheckOutDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.RoomsBooked"></label>
        <input asp-for="Booking.RoomsBooked" class="form-control" />
        <span asp-validation-for="Booking.RoomsBooked" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Book Now</button>
    <a class="btn btn-secondary mt-2" asp-page="Index">Cancel</a>
</form>
